## League Ranking

```{r ranking}

library(yaml)
library(tidyverse)
library(glue)
library(ggimage)

# parameters
.week  <- params$week
config <- yaml.load_file("./config/config.yml")


# pega o resultado pos semana
sim <- readRDS(glue("./data/simulation_v5_week{.week}_posMNF.rds"))

ranking <- 1:.week %>% 
  map(formatC, width = 2, flag = "0") %>% 
  map(~glue("./data/rank_week{.x}.rds")) %>% 
  map_df(readRDS)


ranking %>% 
  filter(week==.week) %>% 
  mutate( 
    rankChange = as.integer(rankChange),
    pct=round(wins/(wins+losses),3),
    img=glue("<img src='{imageUrl}' width='50px' height='50px'>")
  ) %>% 
  select(rank, chg=rankChange, img, name, record, pct, streak, waiver=waiverPriority, pts=season.pts, agains=season.ptsAgainst ) %>% 
  arrange(rank) %>% 
  knitr::kable()

```


